root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.{js,py,ts}]
charset = utf-8
indent_style = space

[*.py]
indent_size = 4

[*.yml]
indent_size = 4

[*.{js,ts}]
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
